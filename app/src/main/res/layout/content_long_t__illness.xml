<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.nooraalhassen.myapplication.LongT_Illness"
    tools:showIn="@layout/activity_long_t__illness"
    android:id="@+id/LTLayout">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Long-Term Illness"
        android:id="@+id/textView57"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Illness Name:"
        android:id="@+id/textView58"
        android:layout_below="@+id/textView57"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Start Date:"
        android:id="@+id/textView59"
        android:layout_below="@+id/textView58"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="End Date:"
        android:id="@+id/textView60"
        android:layout_below="@+id/textView59"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medication:"
        android:id="@+id/textView61"
        android:layout_below="@+id/textView60"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        android:id="@+id/LT_save"
        android:layout_marginBottom="59dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/longIll_name"
        android:layout_above="@+id/textView59"
        android:layout_alignRight="@+id/LT_save"
        android:layout_alignEnd="@+id/LT_save"
        android:layout_toEndOf="@+id/textView58"
        android:layout_toRightOf="@+id/textView58" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/LTI_sdate"
        android:layout_alignBottom="@+id/textView59"
        android:layout_alignRight="@+id/longIll_name"
        android:layout_alignEnd="@+id/longIll_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/LTI_edate"
        android:layout_above="@+id/textView61"
        android:layout_alignRight="@+id/LTI_sdate"
        android:layout_alignEnd="@+id/LTI_sdate" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LTI_med"
        android:layout_alignBottom="@+id/textView61"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/LTI_edate"
        android:layout_alignStart="@+id/LTI_edate" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LTsd_Dialog"
        android:src="@android:drawable/ic_menu_month"
        android:layout_above="@+id/textView60"
        android:layout_alignLeft="@+id/LTed_Dialog"
        android:layout_alignStart="@+id/LTed_Dialog" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LTed_Dialog"
        android:src="@android:drawable/ic_menu_month"
        android:layout_alignBottom="@+id/LTI_edate"
        android:layout_toRightOf="@+id/textView61"
        android:layout_toEndOf="@+id/textView61" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LTaddMed"
        android:src="@android:drawable/ic_input_add"
        android:layout_alignBottom="@+id/LTI_med"
        android:layout_toLeftOf="@+id/LTI_med"
        android:layout_toStartOf="@+id/LTI_med" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addLTName"
        android:src="@android:drawable/ic_input_add"
        android:layout_alignBottom="@+id/textView58"
        android:layout_alignLeft="@+id/LTaddMed"
        android:layout_alignStart="@+id/LTaddMed" />
</RelativeLayout>
