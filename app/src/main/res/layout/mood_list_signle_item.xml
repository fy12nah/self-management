<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:id="@+id/moodLayout"
        tools:context="com.nooraalhassen.myapplication.DailyDisplayActivity$PlaceholderFragment">

        <TextView
            android:id="@+id/section_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Mood Status"
            android:id="@+id/moodTitle"
            android:layout_below="@+id/section_label"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Mood:"
            android:id="@+id/tvMoodName"
            android:layout_below="@+id/moodTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Reason:"
            android:id="@+id/tvmoodR"
            android:layout_below="@+id/tvMoodName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Time:"
            android:id="@+id/tvMoodTime"
            android:layout_below="@+id/tvmoodR"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="mood"
            android:id="@+id/mood_Name"
            android:layout_above="@+id/moodR"
            android:layout_toRightOf="@+id/moodTitle"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="reason"
            android:id="@+id/moodR"
            android:layout_below="@+id/tvMoodName"
            android:layout_alignLeft="@+id/mood_Time"
            android:layout_alignStart="@+id/mood_Time"
            android:layout_alignRight="@+id/mood_Name"
            android:layout_alignEnd="@+id/mood_Name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="time"
            android:id="@+id/mood_Time"
            android:layout_below="@+id/tvmoodR"
            android:layout_alignLeft="@+id/mood_Name"
            android:layout_alignStart="@+id/mood_Name"
            android:layout_alignRight="@+id/mood_Name"
            android:layout_alignEnd="@+id/mood_Name" />

    </RelativeLayout>
